
@{
    Layout = null;//мастер-страница не будет применяться к этому представлению
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Книжный магазин</title>
</head>
<body>
    <div>
        <h3>Распродажа книг</h3>
        <table>
            <tr>
                <td><p>Название книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Цена</p></td>
                <td><p>Кол-во</p></td>
                <td></td>
            </tr>
            @foreach (var b in ViewBag.Books)
            {
                if (b.Count > 0)
                {
                    <tr>
                        <td><p>@b.Name</p></td>
                        <td><p>@b.Author</p></td>
                        <td><p>@b.Price</p></td>
                        <td><p>@b.Count</p></td>
                        <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
                    </tr>
                }
            }

        </table>
    </div>
</body>
</html>